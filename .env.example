# Environment Configuration Example
# Copy this file to .env and customize for your environment

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-east-1
S3_ALLOWED_BUCKETS=bucket1,bucket2
S3_TIMEOUT_SECONDS=30
# S3_ENDPOINT_URL=http://localhost:3900  # Optional, for S3-compatible storage

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_CORS_ORIGINS=*

# Document Processing
MAX_INPUT_SIZE_MB=100
MAX_OUTPUT_SIZE_MB=10
DEFAULT_DPI=150
REQUEST_TIMEOUT_SECONDS=30

# Cache Configuration (L1 in-memory only)
CACHE_L1_SIZE_MB=500

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=text

# Rate Limiting (in-memory)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
